<div class='row'>
  <div class='col-md-6 col-md-offset-3 col-xs-8 col-xs-offset-2 authform'>
    <%= simple_form_for @locality, html: { class: 'form-vertical' } do |f| %>
      <h3>New Locality</h3>
      <%= f.input :country_code, as: :hidden, input_html: { value: 'US' } %>
      <%= f.input :state_code, label: 'State',
                               input_html: { class: 'form-control' },
                               wrapper_html: { class: 'form-group' } do %>
        <%= f.subregion_select :state_code, 'US', {}, class: 'form-control' %>
      <% end %>
      <%= f.input :city, input_html: { class: 'form-control' },
                         wrapper_html: { class: 'form-group' }%>
      <%= f.input :name, label: 'Locality name',
                         input_html: { class: 'form-control' },
                         wrapper_html: { class: 'form-group' } %>
      <%= f.button :submit, class: 'btn btn-default btn-lg pull-right'  %>
    <% end %>
  </div>
</div>
