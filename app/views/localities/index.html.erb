<% content_for :page_name do %>
  Localities
<% end %>
<% content_for :locality_class do %>
  active
<% end %>

<div class="row">
  <div class="col-lg-10 col-lg-offset-1 col-md-6">
    <h1 class="page-header">Locations</h1>
  </div>
</div>

<div class="row">
  <div class="col-lg-10 col-lg-offset-1 col-md-12">
    <ul>
      <% @localities.each do |locality| %>
        <li><%= link_to locality.name, locality_path(locality) %></li>
      <% end %>
    </ul>

    <p><%= link_to "Add a new locality!", new_locality_path %></p>
  </div>
</div>
